{
	"manifest_version": 2,

	"name": "TraktToKodi",
	"description": "Open/Play content from trakt.tv in a Kodi add-on.",
	"version": "0.2.2.0",
	"default_locale": "en",

	"icons": {
		"128": "/images/icon_128.png",
		"48": "/images/icon_48.png",
		"16": "/images/icon_16.png"
	},

	"browser_action": {
		"default_icon": {
			"38": "/images/icon_38.png",
			"19": "/images/icon_19.png"
		},
		"default_popup": "/html/settings.html"
	},

	"options_ui": {
		"page": "/html/settings.html",
		"chrome_style": false
	},

	"content_scripts": [{
		"matches": ["*://*.trakt.tv/*"],
		"css": ["/css/trakt.css"],
		"js": ["/js/content_script.js"],
		"all_frames": true
	}],

	"background": {
		"matches": ["*://*.trakt.tv/*"],
		"scripts": ["/js/background.js"],
		"persistent": false
	},

	"permissions": [
		"background",
		"*://*.trakt.tv/*",
		"tabs",
		"webNavigation",
		"activeTab",
		"storage"
	],

	"options_page": "/html/settings.html"
}
